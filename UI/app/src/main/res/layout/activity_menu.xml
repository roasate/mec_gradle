<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rohit.ui.Menu">

    <Button
        android:id="@+id/push_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/technology"
        android:padding="15dp"
        android:layout_below="@+id/textView5"
        android:layout_toLeftOf="@+id/push_button2"
        android:layout_toStartOf="@+id/push_button2"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp" />

    <Button
        android:id="@+id/push_button1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/push_button"
        android:layout_alignStart="@+id/push_button"
        android:layout_below="@+id/push_button"
        android:layout_marginTop="30dp"
        android:background="@drawable/music"
        android:padding="15dp" />

    <Button
        android:id="@+id/push_button2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/cycle"
        android:padding="15dp"
        android:layout_alignTop="@+id/push_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/push_button3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/health"
        android:padding="15dp"
        android:layout_alignTop="@+id/push_button1"
        android:layout_alignLeft="@+id/push_button2"
        android:layout_alignStart="@+id/push_button2" />

    <Button
        android:id="@+id/push_button4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/business"
        android:padding="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView8"
        android:layout_toRightOf="@+id/push_button2"
        android:layout_toEndOf="@+id/push_button2"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@android:color/background_light" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/push_button"
        android:layout_alignRight="@+id/push_button"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="Technology"
        android:textColor="?attr/colorAccent"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sports"
        android:textColor="?attr/colorAccent"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business"
        android:textColor="?attr/colorAccent"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/push_button4"
        android:layout_alignStart="@+id/push_button4"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entertainment"
        android:textColor="?attr/colorAccent"
        android:textSize="14sp"
        android:layout_below="@+id/push_button1"
        android:layout_alignRight="@+id/push_button1"
        android:layout_alignEnd="@+id/push_button1" />
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health"
        android:textColor="?attr/colorAccent"
        android:textSize="14sp"
        android:layout_below="@+id/push_button3"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />



</RelativeLayout>
